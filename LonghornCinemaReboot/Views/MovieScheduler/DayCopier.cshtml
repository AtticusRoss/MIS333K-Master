
@{
    ViewBag.Title = "DayCopier";
}

<h2>DayCopier</h2>


@using (Html.BeginForm("DayCopier", "MovieScheduler", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Which Day Would You Like To Copy?</h4>
    <h4><b>WARNING</b> This will overwrite any movies you have scheduled on the day you copy to.</h4>
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })


    <!--Multiselect list for Movies-->
    <div class="form-group" align="right" action="/action_page.php">
        
            Selected Date to Copy:
            <input type="date" name="date_to_copy">

    </div>

    <div class="form-group" align="right" action="/action_page.php">
            Selected Date to Overwrite:
            <input type="date" name="date_to_overwrite">

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Copy" />
        </div>
    </div>

}
